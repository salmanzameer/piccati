




<div class="background-image">
  <div class="top-content">
    <div class="inner-bg">
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 text">
            <h1><strong>Client</strong> Form</h1>

          </div>
        </div>
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3 form-box">
            <div class="form-top">
              <div class="form-top-left">
                <h3>Please fill the client form</h3>
                <p>Enter your crentendials:</p>
              </div>
              <div class="form-top-right">
                <i class="fa fa-lock"></i>
              </div>
            </div>
            <div class="form-bottom">

             <%= form_for @client, url: api_v1_photographer_clients_path do |f| %>

             
             <div class="form-group">
               <%= f.label :firstname, :class => 'sr-only', :for => 'form-name'%>
               <%= f.text_field :first_name,autofocus: true, :placeholder =>"First Name", :class => "form-firstname form-control", :id => "form-firstname" %>
               <% if @client.errors.present? %>
               <div class="txt">
                 <%=  @client.errors.messages[:first_name].first%>
               </div>
               <% end %> 
               
             </div>
             <div class="form-group">
               <%= f.label :lastname, :class => 'sr-only', :for => 'form-lastname'%>
               <%= f.text_field :last_name ,autofocus: true, :placeholder =>"Last Name", :class => "form-lastname form-control", :id => "form-lastname" %>
               <% if @client.errors.present? %>
               <div class="txt"> 
                <%=  @client.errors.messages[:last_name].first%>
              </div>
              <% end %> 
              
            </div>
            
            <div class="form-group">
             <%= f.label :username, :class => 'sr-only', :for => 'form-username'%>
             <%= f.text_field :user_name, autofocus: true, :placeholder =>"User Name", :class => "form-username form-control", :id => "form-username" %>
             <% if @client.errors.present? %>
             <div class="txt">
               <%=  @client.errors.messages[:user_name].first%>
             </div>
             <% end %> 
             
           </div>
           
           <div class="form-group">
             <%= f.label :email, :class => 'sr-only', :for => 'form-email'%>
             <%= f.text_field :email, autofocus: true, :placeholder =>"Email", :class => "form-email form-control", :id => "form-email" %>
             <% if @client.errors.present? %>
             <div class="txt"> 
              <%=  @client.errors.messages[:email].first%>
            </div>
            <% end %> 
            
          </div>
          <div class="form-group">
           <%= f.label :password , :class => 'sr-only', :for =>'form-password' %>
           <%= f.password_field :password, autocomplete: "off", :placeholder => 'New Password', class: "form-password form-control", :id =>'form-password' %>
           <% if @minimum_password_length %>
           <em>(<%= @minimum_password_length %> characters minimum)</em> 
           <% end %>
           <% if @client.errors.present? %>
           <div class="txt">
             <%= @client.errors[:password].first%>
           </div>
           <% end %>
         </div>
         <%= f.button 'Submit' , class: "btn" %></td>
         <% end %>
         
       </div>
       <div class="form-group">
        <%= link_to "Back",  api_v1_photographer_clients_path(current_photographer) %>
      </div>
    </div>
  </div>
  
</div>
</div>
</div>
</div>
