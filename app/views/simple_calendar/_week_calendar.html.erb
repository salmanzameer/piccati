<div class="simple-calendar">
  <div class="calendar-heading">
    <% if request.xhr? %>
      <%= link_to t('simple_calendar.previous', default: 'Previous'), "/photographers/#{current_photographer.id}/events_info?start_date=#{start_date.last_week}&&calendar_type=#{params[:calendar_type]}" %>
      <span class="calendar-title"><%= start_date.strftime("%B %Y") %></span>
      <%= link_to t('simple_calendar.next', default: 'Next'), "/photographers/#{current_photographer.id}/events_info?start_date=#{start_date.next_week}&&calendar_type=#{params[:calendar_type]}" %>
    <% else %>
      <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view %>
      <span class="calendar-title"><%= start_date.strftime("%B %Y") %></span>
      <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view %>
    <% end %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
              <% else %>
                <div  class="today-date"><% block.call day.strftime("%d"), sorted_events.fetch(day, []) %></div>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
