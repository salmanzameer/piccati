
<%= image_tag("logo.png", style: "height: 70%;width: 130px;margin-top: 60px;") %>
<div class="top-content">
<div>
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">


        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-sm-4 form-box">
          <div class="form-top">
            <div class="form-top-left">
            </div>
            <div class="form-top-right">
              <i class="fa fa-lock"></i>
            </div>
          </div>
          <div class="form-bottom">

           <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => 'login-form') do |f| %>
           <div class="form-group">
             <%= f.label :email, :class => 'sr-only', :for => 'form-username'%> 
             <%= f.email_field :email, autofocus: true , :placeholder => 'Email' ,class: "form-username form-control", :id =>'form-username' %>
               <div class="txt">
               <%= resource.errors[:email].first%>
               </div>
           </div>
           <div class="form-group">
             <%= f.label :password , :class => 'sr-only', :for =>'form-password' %>
             <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', class: "form-password form-control", :id =>'form-password' %>
             <div class="txt">
             <%= resource.errors[:password].first  %>
             </div>
           </div>
           <button type="submit" class="btn btn-submit">Log In</button>
           <% end %>
         </div>
           <%= link_to "Connect With Facebook", photographer_omniauth_authorize_path(:facebook), class:"btn btn-facebook"%>
          <%= link_to "Sign up", new_photographer_registration_path, class:"btn btn-sign-up"%>
       </div>
           <div class="col-md-4">
          </div>
     </div>
     
  </div>
</div>
</div>
</div>

