

<div class="top-content">
<div class="inner-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
          <h1><strong>Photographer</strong> Login Form</h1>

        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form-box">
          <div class="form-top">
            <div class="form-top-left">
              <h3>Login to our site</h3>
              <p>Enter your email and password to log on:</p>
            </div>
            <div class="form-top-right">
              <i class="fa fa-lock"></i>
            </div>
          </div>
          <div class="form-bottom">

           <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => 'login-form') do |f| %>
           <div class="form-group">
             <%= f.label :email, :class => 'sr-only', :for => 'form-username'%> 
             <%= f.email_field :email, autofocus: true , :placeholder => 'Email' ,class: "form-username form-control", :id =>'form-username' %>
               <div class="txt">
               <%= resource.errors[:email].first%>
               </div>
           </div>
           <div class="form-group">
             <%= f.label :password , :class => 'sr-only', :for =>'form-password' %>
             <%= f.password_field :password, autocomplete: "off", :placeholder => 'password', class: "form-password form-control", :id =>'form-password' %>
             <div class="txt">
             <%= resource.errors[:password].first  %>
             </div>
           </div>
           <button type="submit" class="btn">Sign in!</button>
           <% end %>
           <%= link_to "Connect With Facebook", photographer_omniauth_authorize_path(:facebook) %><br>
           <%=link_to('Sign up', new_photographer_registration_path) %>
         </div>
       </div>
     </div>
     
  </div>
</div>
</div>
</div>

