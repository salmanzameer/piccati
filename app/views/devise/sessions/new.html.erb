<%= image_tag("piccati-login-logo.png", style: "margin-top: 60px;") %>
<p style="margin-top:30px;margin-bottom:0px;color:#fff;font-size: 24px;">Sign in to Piccati</p></center>
<div class="top-content">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4 form-box">
          <div class="form-top">
            <div class="form-top-left">
            </div>
            <div class="form-top-right">

            </div>
          </div>
          <div class="form-bottom" style="margin-left: 335px;">

           <%= form_for(resource, as: resource_name, url: session_path(resource_name), validate: true, :class => 'login-form') do |f| %>
           <div class="form-group input-field-setting">
             <%= f.label :email, :class => 'sr-only', :for => 'form-username'%> 
             <%= f.email_field :email , :placeholder => 'Email' ,class: "form-username form-control", :id =>'form-username' %>
             <div class="txt">
               <%= resource.errors[:email].first%>
             </div>
           </div>
           <div class="form-group input-field-setting col-md-10" style="padding-left: 0px;padding-right: 0px;">
             <%= f.label :password , :class => 'sr-only', :for =>'form-password' %>
             <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', class: "form-password form-control form-field-password", :id =>'form-password' %>
             <div class="txt">
               <%= resource.errors[:password].first  %>
             </div>

           </div>
           <div class="col-md-2" style="padding-left: 0px;padding-right: 0px;">
            <button type="submit" class="btn btn-submit submit-main-btn"><i class="fa   fa-arrow-circle-o-right sign-up-btn"></i></button>
          </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-4">
      </div>
    </div>
    <div class="container">
      <div class="col-md-8 zero-padding"><%= link_to "Sign up now.", new_photographer_registration_path, class: "btn-sign-in-index-pg" %></div>
    </div>
  </div>
</div>

