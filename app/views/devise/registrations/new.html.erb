<div class="col-md-12">
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "sign-up-form-set-align" } do |f| %>
              <center><h2 class="sign-up-data-align">Sign Up</h2></center>
    <div class="col-md-6">
    <%= f.select(:title , options_for_select(['Mr',  'Miss','Mrs',  'Dr'], resource.title ), {prompt: true  }, class: "form-title form-control", :id => "form-title" , style: "height: 50px;")   %>
    <div class="txt">
      <%= resource.errors["title"].first%>
    </div>
    <%= f.label :firstname, :class => 'sr-only', :for => 'form-firstname'%> 
      <%= f.text_field :firstname, autofocus: true , :placeholder => 'Firstname' ,class: "form-firstname form-control", :id =>'form-firstname' %>
    <div class="txt">
      <%= resource.errors["firstname"].first%>
    </div>
    <%= f.label :lastname, :class => 'sr-only', :for => 'form-lastname'%> 
      <%= f.text_field :lastname, autofocus: true , :placeholder => 'Lastname' ,class: "form-lastname form-control", :id =>'form-lastname' %>
    <div class="txt">
      <%= resource.errors["lastname"].first%>
    </div>
    <%= f.label :username, :class => 'sr-only', :for => 'form-username'%> 
      <%= f.text_field :username, autofocus: true , :placeholder => 'Username' ,class: "form-username form-control", :id =>'form-username' %>
    <div class="txt">
     <%= resource.errors["lastname"].first%>
    </div>
    </div>
    <div class="col-md-6">
    <%= f.label :contnumber, :class => 'sr-only', :for => 'form-contact'%> 
      <%= f.text_field :contnumber, autofocus: true , :placeholder => 'Contact' ,class: "form-contact form-control", :id =>'form-contact' %>
    <div class="txt">
     <%= resource.errors["contnumber"].first%>
    </div>
    <%= f.label :email, :class => 'sr-only', :for => 'form-username'%> 
      <%= f.email_field :email, autofocus: true , :placeholder => 'Email' ,class: "form-username form-control", :id =>'form-username' %>
    <div class="txt">
     <%= resource.errors["email"].first%>
    </div>
    <%= f.label :password , :class => 'sr-only', :for =>'form-password' %>
    <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', class: "form-password form-control", :id =>'form-password' %>
      <div class="txt">
          <%= resource.errors["password"].first%>
      </div>
      <%= f.label :password_confirmation , :class => 'sr-only', :for =>'form-password' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password Confirmation', class: "form-password form-control", :id =>'form-password' %>
      <div class="txt">
        <%= resource.errors["password_confirmation"].first%>
      </div>
      </div>
      <button type="submit" class="button button4"><i class="fa fa-plus-circle"></i>Submit</button>
      <% end %>
  </div>
</div>
            
</div>