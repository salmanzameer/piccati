<%= image_tag("piccati-login-logo.png", style: "margin-top: 60px;") %>
<center><p class="sign-up-data-align-sigin-heading">Sign up to Piccati</p></center>
<div class="col-md-12">
  <div class="col-md-4">
  </div>
  <div class="col-md-6">
    <fieldset class="form-calandar-popup-fieldset1">
    <%= form_for resource, as: resource_name, url: registration_path(resource_name), validate: true, html: { class: "form-sign-up-new1", id: "signup-form" } do |f| %>
    
      <%= f.select(:title , options_for_select(['Mr',  'Miss','Mrs',  'Dr'], resource.title ), {prompt: true  }, class: "form-title form-control client_fields_calandar1 zero-border", :id => "form-title" , style: "height: 50px;border-radius: 0px;")   %>
    <%= f.label :firstname, :class => 'sr-only ', :for => 'form-firstname'%> 

      <%= f.text_field :firstname, autofocus: true , :placeholder => 'Firstname' ,class: "form-firstname form-control  form-box-s client_fields_calandar1 zero-border mT1", :id =>'form-firstname' %>
    <%= f.label :lastname, :class => 'sr-only', :for => 'form-lastname'%> 
      <%= f.text_field :lastname, autofocus: true , :placeholder => 'Lastname' ,class: "form-lastname form-control  form-box-s client_fields_calandar1 zero-border mT1", :id =>'form-lastname' %>
    <%= f.label :email, :class => 'sr-only', :for => 'form-username'%> 
      <%= f.email_field :email, autofocus: true , :placeholder => 'Email' ,class: "form-username form-control  client_fields_calandar1 zero-border mT1", :id =>'form-username' %>
    <%= f.label :contnumber, :class => 'sr-only', :for => 'form-contact'%> 
      <%= f.text_field :contnumber, autofocus: true , :placeholder => 'Contact' ,class: "form-contact form-control  client_fields_calandar1 zero-border mT1", :id =>'form-contact' , style: "margin-top:0px;"%>
    <%= f.label :password , :class => 'sr-only', :for =>'form-password' %>
    <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', class: "form-password form-control  client_fields_calandar2 zero-border mT1", :id =>'form-password' %>
      <%= f.label :password_confirmation , :class => 'sr-only', :for =>'form-password' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password Confirmation', class: "form-password form-control  client_fields_calandar1 zero-border mT1", :id =>'form-password' %>
      <button type="submit" class="button button4 client_fields_calandar2 mB70"><i class="fa fa-plus-circle btn-sign-up-registration"></i>Submit</button>
    </fieldset>
    </div>
      <% end %>
</div>
            
</div>