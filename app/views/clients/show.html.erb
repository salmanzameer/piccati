        </tbody>
      </table>
        
         <h3 class ="center">Client Events</h3>


  <div class="table-responsive">
   <table class="table">
   
      <tr>

       <th class="center">Event Name</th>
       <th class="center">Birde Name</th>
       <th class="center">Groom Name</th>
       <th class="center">Location</th>
       <th class="center">Upload Images</th>
     </tr>
   
   <%@events.each do |event|%>
  
    <tr class="txt">
     <td><ins>
     <%= link_to (event.name), all_images_photographer_client_event_path(current_photographer,@client,event.id), class: "txt"%></ins></td>
     <td><%=event.bridal%></td>
     <td><%= event.groom%></td>
     <td><%= event.location %></td>
     <td><%= link_to 'Upload-Images', photographer_client_event_path(current_photographer,@client.id,event.id), class: "btn btn-link-1"%></td>
   </tr>
  <% end %>
</table>
</div>

