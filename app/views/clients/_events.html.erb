<div class="col-md-4">
	<h1 class="heading-client-mangement heading-client-mangement-bot-margin heading-clientlist">Events List of selected Client</h1>
	<div class="col-md-12 selected-pkg">
		<div class="selected-pkg-adjust selected-pkg-adjust-bot">
			<div class="col-md-4 selected-pkg-adjust-bot">Pakage</div>
			<div class="col-md-8 selected-pkg-adjust-bot">3x2</div>
			<div class="col-md-4 selected-pkg-adjust-bot">Adavance</div>
			<div class="col-md-8 selected-pkg-adjust-bot">1,50,000</div>
			<div class="col-md-4 selected-pkg-adjust-bot">Total</div>
			<div class="col-md-8 selected-pkg-adjust-bot">3,00,000</div>
			<div class="col-md-4 selected-pkg-adjust-bot">Balace</div>
			<div class="col-md-8 selected-pkg-adjust-bot">1,50,000</div>
		</div>
	</div>
	<div style="margin-top:15px;">
		<table class="table table-striped header-fixed">
			<thead>
				<tr>
				  <div>
				    <th style="background-color: #003366;color: #fff;">
				    	Event Type
				    </th>
				    <th style="background-color: #003366;color: #fff;">
				    	No. of Photos 
				    </th>
				  </div>
			  </tr>
			</thead>
		  <tbody>
		  <tr><td><%= 'No Events' if @events.blank? %></td></tr>
			  <% @events.each do |event| %>
			  	<% cls = @path.present? && @path["id"] == event.id.to_s ? 'tr-selected' : "" %>
				  <tr>
				    <td class="height-event-box"><%= link_to event.name, "#", class: "#{cls} show-event", data: { id: event.id } %>
				    </td>
				    <td>
				    	<i class="fa fa-plus-circle"></i>
				    	<%= link_to 'Add Photos', upload_image_photographer_client_event_path(current_photographer,event.client.id,event),class: "btn btn-uploadimage1" %>
				    </td>
				  </tr>
				 <% end %>
			</tbody>
		</table>
		<button class="button button4 popup event-btn" id="popup" data-id="abc"><i class="fa fa-plus-circle"></i> Add Event</button>
		</div>
		<div id="abc">
		<!-- Popup Div Starts Here -->
			<div id="popupContact">
	<!-- Contact Us Form -->
				<%= form_for event, url: photographer_client_events_path(current_photographer.id, client.id), html: { class: "form-action" } do |f| %>
					<%= image_tag ("close1.png"), class: "close", data: { id: "abc" }%>
					<center><h2>Add a Event</h2></center>
					<fieldset>
					  <%= f.text_field :name, autofocus: true, :placeholder =>"Name", :class => "first-field client_fields" %>
					  <%= f.text_field :location, autofocus: true, :placeholder =>"Location", :class => "first-field client_fields" %>
					  <%= f.text_field :bridal, autofocus: true, :placeholder =>"Bride Name", :class => "first-field client_fields" %>
					  <%= f.text_field :groom, autofocus: true, :placeholder =>"Groom Name", :class => "first-field client_fields" %>
					  <div class='input-group date' id='datetimepicker1'>
                    <input type='datetime' class="first-field client_fields" name="event[start_time]" placeholder="Select Date" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            <script type="text/javascript">
		            $(function () {
		                $('#datetimepicker1').datetimepicker();
		            });
		        </script>
					 </fieldset>
					<!-- <textarea id="msg" name="message" placeholder="Message"></textarea> -->
					
					<center><%= f.button 'Add Event' , id: "submit", class: "button4 submit-event" %></center>
				<% end %>
			</div>
	<!-- Popup Div Ends Here -->
		</div>

</div>
