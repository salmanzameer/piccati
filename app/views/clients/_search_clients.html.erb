<div class="col-md-10 email-add-client-field-view search-field-design-client">
<div class="rss-feed ">
<ul class="live-search-list">
	<% clients.each do |client| %>
		<li class="list-search-client-des">
		   <%= image_tag (client.avatar), class: "img-circle", style: "width:20px; height:20px; margin-left: 7px;" %>
		   <%= link_to client.email, search_client_fields_clients_path(email: client.email, focus_field: "true"), class: "select-searched-email", remote: true %>
		</li>
	<% end %>
	<% if clients.blank? %>
		<li>Client with email "<%= search_params %>" is not on Piccati</li>
	<% end %>
</ul>
</div>
</div>