<div class="col-md-12 left-padding-thirty">
  <%= f.text_field :firstname, value: client.try(:firstname) , autocomplete: :off, autofocus: true, placeholder: "First Name", class: "create-firstname first-field client_fields_calandar fl", style: "border: 1px solid #cccccc !important;" %>
  <p class="firstname-error-p-tag">can't be blank</p>
</div>
<div class="col-md-12 left-padding-thirty">
  <%= f.text_field :lastname, value: client.try(:lastname), autocomplete: :off, placeholder: "Last Name", class: "create-lastname first-field client_fields_calandar fl", style: "border: 1px solid #cccccc !important;" %>
  <p class="lastname-error-p-tag">can't be blank</p>
</div>
<% unless client.present? %>
  <div class="col-md-12 left-padding-thirty">
    <%= f.text_field :contnumber, value: client.try(:contnumber), autocomplete: :off, placeholder: "Contact Number", class: "create-lastname first-field client_fields_calandar fl", style: "border: 1px solid #cccccc !important;" %>
    <p class="lastname-error-p-tag">can't be blank</p>
    <%= f.text_area :description,value: client.try(:description), autocomplete: :off, placeholder: "Description", class: "create-lastname first-field client_fields_calandar fl description-field-client", style: "border: 1px solid #cccccc !important;" %>
    <p class="description-error-p-tag">can't be blank</p>
  </div>
<% end %> 
