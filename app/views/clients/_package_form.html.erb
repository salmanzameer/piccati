<%= image_tag ("close1.png"), class: "close", data: { id: "edit_client_popup" } %>
<%= form_for package, url: update_package_client_path(@client), method: :put,validate: true, html: { class: "edit-package-model form-action form-calandar-popup", id: "package-update-client" } do |f| %>
  <center><h2 class="form-calandar-popup-heading-top">Update Package</h2></center>
  
  <fieldset  class="form-calandar-popup-fieldset">
    <%= f.select(:package_id , options_from_collection_for_select(current_photographer.packages, "id", "name", package.package_id), { prompt: "Package Type"  }, class: "form-title form-control event-category client_fields_calandar", style: "height: 50px;margin-top: 1px;border-radius: 0px;width: 80%;float:left;")   %>

    <%= f.text_field :advance, :placeholder =>"Advance", :class => "first-field client_fields client_fields_calandar" %>

    <%= f.text_field :total, :placeholder =>"Total", :class => "first-field client_fields client_fields_calandar" %>
      
   <button type="submit"  class="submit button button4 bt-add-cli btn-client-magin-zero edit-package client_fields_calandar"><i class="fa fa-plus-circle btn-margin-right-ten"></i>Update Package</button>

  </fieldset>
<% end %>