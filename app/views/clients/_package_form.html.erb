<%= form_for package, url: update_package_client_path(@client), method: :put,validate: true, html: { class: "edit-package-model form-action" } do |f| %>
  <%= image_tag ("close1.png"), class: "close", data: { id: "edit_client_popup" } %>
  <center><h2>Update Package</h2></center>
  
  <fieldset>
    <%= f.text_field :package, autofocus: true, :placeholder =>"Package", :class => "first-field client_fields" %>

  <%= f.text_field :advance, autofocus: true, :placeholder =>"Advance", :class => "first-field client_fields" %>

  <%= f.text_field :total, autofocus: true, :placeholder =>"Total", :class => "first-field client_fields" %>
      
   <center><button type="submit"  class="button button4 bt-add-cli btn-client-magin-zero edit-package"><i class="fa fa-plus-circle btn-margin-right-ten"></i>Update Package</button></center>

  </fieldset>
<% end %>