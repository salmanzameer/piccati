<div class="container">
  <div class="col-md-12">
  </div>
	<% if @albums.present? %>
    <div class="col-md-12">
      <div class="col-md-12 text-alignment-heading-album">
        <span class="album-text-align">All Albums</span>
        <span class="text-para">by <%= current_photographer.fullname.titleize %>
          <span class="pull-right button-album-back-pictres">
            <i class="fa fa-plus-circle"></i>
            <%= link_to "Add Album", "#", class: "client_management_popup add-album-setting-heading", data: { id: "add_album", popup: "add_album_popup", client_id: "" } %>
          </span>
        </span>
      </div>
      <div class="col-md-12 album-text-align text-para"> 
    		<hr class="hr-album1">
    	</div>
    </div>
      <div class="row">
        <div class="col-md-12" style="margin-bottom:50px;">
          <ul style="list-style:none;" class="ul-li">
            <% @albums.each do |album| %>
              <li style="display: inline;margin-bottom: 35px; margin-right: 35px;" class="col-md-2 zero-padding cursor-pointer">
                <div class="hovereffect">
                  <% if album.images.present? %>
                    <%= image_tag(album.images.first.image.url(:medium), style: "width: 100%;") %>
                  <% else %>
                    <%= image_tag("default-album.png", width: 183, height: 183)%>
                  <% end %>
                  <div class="overlay">
                   <%= link_to "Show", photographer_album_path(current_photographer, album),class: "info", style: "color: white;" %>
                   <%= link_to "Delete", "#", class: "signup_buttons_popup info client_management_popup", style: "color: white;", data: { id: "delete_album", controller: "albums", popup: "delete_album_popup", album: album.id } %>
                  </div>
                </div>
                <span style="margin-top:15px;"><%= album.name %></span>
                <div id="delete_album_popup" style="z-index:9999">
                  <div id="popupContact">
                    <div id="delete_album"></div>    
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
  <% else %>
<div class="col-md-12">
        <div class="col-md-12 text-alignment-heading-album">
          <span class="album-text-align">No Album Uploaded</span>
          <span class="text-para">
            <span class="pull-right button-album-back-pictres">
      <i class="fa fa-plus-circle"></i>
      <%= link_to "Add Album", "#", class: "client_management_popup add-album-setting-heading", data: { id: "add_album", popup: "add_album_popup", client_id: "" } %>
    </span>
          </span>
        </div>
        <div class="col-md-12 album-text-align text-para"> 
          <hr class="hr-album1">
        </div>
  <% end %>
</div>

</div>
    <div id="add_album_popup" style="z-index:9999">
      <div id="popupContact">
        <div id="add_album"></div>    
      </div>
    </div>
