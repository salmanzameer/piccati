<%= image_tag ("close1.png"), class: "close cal-close", data: { id: "update_album_popup" } %>
<%= form_for album ,url: photographer_album_path(current_photographer, album), method: :put, validate: true, html: { id: "add-photographer-album", class: "form-action form-calandar-popup" } do |f| %>
  <center><h2 class="form-calandar-popup-heading-top">Update Album</h2></center>
  <fieldset class="form-calandar-popup-fieldset">
    <div class="row">
      <div class="email-add-client-field-view">
        <%= f.text_field :name, autocomplete: :off, autofocus: true, placeholder: "Album name", class: "first-field client_fields client_fields_calandar", style: "border: 1px solid #cccccc !important;" %>
      </div>
      <div class="email-add-client-field-view">
        <%= f.text_area :description, autocomplete: :off, placeholder: "Album description", class: "first-field client_fields client_fields_calandar", style: "border: 1px solid #cccccc !important;height: 150px;margin-top:1px;padding-left: 20px;"%>
      </div>
        <%= f.submit 'Update Album' , class: "button button4 bt-add-cli client_fields_calandar submit-album" %>
    </div>
  </fieldset>
<% end %>