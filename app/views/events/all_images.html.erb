<div class="container">
  <% if @images.present? %>
    <div class="col-md-12">
        <div class="col-md-12 text-alignment-heading-album">
          <span class="album-text-align"><%= @event.name.titleize %></span>
          <span class="text-para">by <%= @event.client.firstname.titleize+" "+@event.client.lastname.titleize %><span class="pull-right button-album-back-pictres"><span><%= link_to "Back", photographer_client_event_path(current_photographer, @event.client, @event), class: "add-album-setting-heading button-album-back-pictres" %></span><span class="button-album-back-pictres-dash">|</span><%= link_to 'Add Pictures', upload_image_photographer_client_event_path(current_photographer, @event.client, @event), class: "add-album-tag" %></span></span>
        </div>
        <div class="col-md-12 album-text-align text-para"> 
          <hr class="hr-album1">
        </div>
      </div>

      <div class="row">
        <div class="col-md-12" style="margin-bottom:50px;">
          <ul style="list-style:none;" class="ul-li">
            <% @images.each do |img| %>
              <li style="display: inline;margin-bottom:35px; margin-right: 35px;" data-src="<%= img.image.url%>" class="col-md-2 zero-padding cursor-pointer">
                <img style="width: 100%;" src="<%= img.image.url(:medium) %>" />
              </li>
            <% end %>
          </ul>
        </div>
      </div>
  <% else %>
     <div class="col-md-12">
        <div class="col-md-12 text-alignment-heading-album">
          <span class="album-text-align">No Image Uploaded</span>
          <span class="text-para">by <%= @event.client.firstname.titleize+" "+@event.client.lastname.titleize %><span class="pull-right button-album-back-pictres"><span><%= link_to "Back", photographer_client_event_path(current_photographer, @event.client, @event), class: "add-album-setting-heading button-album-back-pictres" %></span><span class="button-album-back-pictres-dash">|</span><%= link_to 'Add Pictures', upload_image_photographer_client_event_path(current_photographer, @event.client, @event), class: "add-album-tag" %></span></span>
        </div>
        <div class="col-md-12 album-text-align text-para"> 
          <hr class="hr-album1">
        </div>
      </div>
  <% end %>
</div>

</div>
<script type="text/javascript">
  $(document).ready(function() {
    $('.ul-li').lightGallery();
  });
</script>
