<div class="container">
	<center>
		<h1 class="container_heading">Listing All Photographers</h1>		
	</center>
	<div class="photographers_container">
		<% if @photographers.present? %>
			
			<table class="table table-striped table-bordered">
			  <thead>
			    <tr>
			      <th>ID</th>
			      <th>First Name</th>
			      <th>Last Name</th>
			      <th>Email</th>
			      <th>Role</th>
			      <th>Confirmed</th>
			      <th>Clients</th>
			      <th>Connects</th>
			      <th>Available</th>
			      <th>Plan</th>
			    </tr>
			  </thead>
				<% @photographers.each do |photographer| %>
				  <tbody>
				    <tr>
				      <td><%= photographer.id %></td>
				      <td><%= photographer.firstname %></td>
				      <td><%= photographer.lastname %></td>
				      <td><%= photographer.email %></td>
				      <td><%= photographer.role_type %></td>
				      <td><%= photographer.confirmed? %></td>
				      <td><%= photographer.clients.count %></td>
				      <td><%= photographer.total_connects %></td>
				      <td><%= photographer.used_connects %></td>
				      <td><%= check_p_plan_type(photographer) %></td>
				    </tr>
				  </tbody>
		  	<% end %>
			</table>					
		<% else %>
			<h3>No Photographer Plans Found</h3>
		<% end %>
	</div>
</div>
<div class="button-container">
	<div class="button-header">
		<label>Photographer Type</label>
	</div>
	<button class="btn btn-primary Executive btn_setting">Executive</button>	
	<button class="btn btn-primary Premium btn_setting">Premium</button>
	<button class="btn btn-primary Standard btn_setting">Standard</button>	
</div>
