	<div class="container">
		<center>
			<h1 class="spacing-ablbum-heding">Listing All Albums Below</h1>	
		</center>
		<div class="album_container" ">
			<div>
				<%= will_paginate @albums%>
			</div>
			<% if @albums.present? %>
				<% @albums.each do |album| %>			
			<div class="col-md-3 spacing-ablbum-heding">
				<% if album.images.present? %>
		      <%= link_to image_tag(album.images.first.image.url(:medium), class: "admin_image_settings"), admins_album_images_path(album_id: album.id) %>
		      <% else %>
		          <%= link_to image_tag("default-album.png", width: 205, height: 205) %>
				<% end %>			
			</div>
				<% end %> 
			<% else %>
				<h4>No Albums listed yet</h4>
			<% end %>
			<div class="col-md-12">
				<%= will_paginate @albums%>
			</div>
		</div>
	</div>