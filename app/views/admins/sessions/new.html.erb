<center>
  <p class="admin-heading">Admin Log In</p>
</center>
<div>
    <div class="container container-table">
      <div class="row vertical-center-row">
        <div class="col-md-4 col-xs-3 col-sm-3"></div>
        <div class="text-center col-md-4 col-xs-12 col-sm-6">
          <div class="panel panel-default admin-panel">
            <div class="panel-body">
              <div class="form-horizontal">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name) , html: {class:"admin_signin" })  do |f| %>
                  <div class="admin-label">
                    <%= f.label :email %>
                  </div>
                  <div class="form-group input-field-setting">
                      <div class="col-sm-12 zero-padding">
                    <%= f.email_field :email, autofocus: true ,class: "admin_signin admin-input"%>
                      </div>
                  </div>
                  <div class="admin-label">
                    <%= f.label :password %>
                  </div>
                  <div class="form-group input-field-setting">
                    <div class="col-sm-12 zero-padding">
                    <%= f.password_field :password, autocomplete: "off"  ,class: "admin_signin admin-input"%>
                    </div>
                  </div>
                  <% if devise_mapping.rememberable? -%>
                    <div class="admin-label">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end -%>
                  <div class="form-group input-field-setting">
                    <div class="col-sm-12 zero-padding">
                      <%= f.submit "Log in" ,class: "btn button4 admin_signin_btn"%>
                    </div>
                  </div>
                <% end %>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
<%= render "admins/shared/links" %>
