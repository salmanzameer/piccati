<div class="container">
		<h1 class="heading-admin-side">Listing All Clients</h1>		
	<div class="clients-button-container">
	    Client
	    <%= form_tag(admin_client_path, remote: true) do %>
	    	<%= select_tag "client_type", options_for_select([["All", 'All'], ["Connected", true], ["Not Connected", false]], params[:type]), id: "client_type" %>
	    <% end %>
	</div>

	<div class="table-container">
		<div class="clients_details">
			<div class="admin_clients_container">
				<% if @clients.present? %>
					<table class="table table-striped table-bordered">
					  <thead>
					    <tr>
					      <th>First Name</th>
					      <th>Last Name</th>
					      <th>Email</th>
					      <th>Contact</th>
					      <th>Confirmed</th>
					      <th>Photographers</th>
					    </tr>
					  </thead>
						<% @clients.each do |client| %>
						  <tbody>
						    <tr>
						      <td><%= client.firstname %></td>
						      <td><%= client.lastname %></td>
						      <td><%= client.email %></td>
						      <td><%= client.contnumber %></td>
						      <td><%= client.confirmed? %></td>
						      <td><%= client.photographers.count %></td>
						    </tr>
						  </tbody>
				  	<% end %>
					</table>					
				<% else %>
					<h3>No Clients Found</h3>
				<% end %>
			</div>					
		</div>
	</div>
</div>

