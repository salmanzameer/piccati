<div class="container">
		<h1 class="container_heading spacing-ablbum-heding heading-plan-admin-side">Listing All Photographers</h1>		
	
	<div class="button-container">
		Photographer
		<%= form_tag(admin_photographer_path) do %>
	    	<%= select_tag "plan_type", options_for_select([["All", 'All'], ["Default", "Default"], ["Standard", "Standard"], ["Executive", "Executive"], ["Premium", "Premium"]], params[:type]) %>
	    <% end %>
	</div>
	<div class="table-container">
		<div class="photographers_details">
			<div class="admin_photgraphers_container">
				<% if @photographers.present? %>
					<table class="table table-striped table-bordered">
						<thead>
							<th>First Name</th>
							<th>Email</th>
							<th>Role</th>
							<th>Plan</th>
							<th>Clients</th>
							<th>Total Connects</th>
							<th>Used Connects</th>
							<th>Confirmed</th>
							<th>Albums</th>
						</thead>
						<% @photographers.each do |p| %>
							<tbody>
								<tr>
									<td><%= p.firstname %></td>
									<td><%= p.email %></td>				      
									<td><%= p.role_type %></td>
									<td><%= p.plan_type %></td>				      
									<td><%= p.clients.count %></td>				      
									<td><%= p.total_connects %></td>
									<td><%= p.used_connects %></td>
									<td><%= p.confirmed_at? %></td>
									<td><%= link_to "View", admin_photographer_albums_path(p.id), remote: :true %></td>	      
								</tr>
							</tbody>
						<% end %>
					</table>					
				<% else %>
					<h3>No Photographers Found</h3>
				<% end %>
			<%= will_paginate @photographers %>
			</div>
		</div>
	</div>
</div>