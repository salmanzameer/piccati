<h1 class="edit_heading">Edit Plan</h1>
<%= form_for @plan, url: admins_update_plan_path, method: :update,style: "background-color: red;" do |f| %>
  <div class="form-group" >
    <%= f.label :name %><br>
    <%= f.text_field :name,class: "form-control plan_form_field" %>
  </div>
  <div class="form-group">
    <%= f.label :storage %><br>
    <%= f.text_field :storage,class: "form-control plan_form_field" %>
  </div>
  <div class="form-group">
    <%= f.label :connects %><br>
    <%= f.text_field :connects,class: "form-control plan_form_field" %>
  </div>
  <%= f.hidden_field :plan_id, :value => @plan.id %>
  <div class="">
    <%= f.submit class:"btn btn-primary" %>
  </div>
<% end %>

