<%= form_for @plan, url: admins_create_plan_path, method: :post,style: "background-color: red;" do |f| %>
  <div class="form-group" >
    <%= f.label :name %><br>
    <%= f.text_field :name,class: "form-control plan_form_field" %>
  </div>
  <div class="form-group">
    <%= f.label :storage %><br>
    <%= f.text_field :storage,class: "form-control plan_form_field" %>
  </div>
  <div class="form-group">
    <%= f.label :connects %><br>
    <%= f.text_field :connects,class: "form-control plan_form_field" %>
  </div>
  <div class="">
    <%= f.submit class:"btn btn-primary btn-plan-admin" %>
  </div>
<% end %>

