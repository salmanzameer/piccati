<div class="dropdown col-md-12 drop-down-btn-cal">
  <button class="btn btn-default dropdown-toggle button_class drop-down-btn-cal-beauty" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Monthly
    <span class="caret drop-down-btn-cal-beauty"></span>
  </button>
  <ul class="dropdown-menu dropdown-cal-ul" aria-labelledby="dropdownMenu1">
    <li class="btn-drop-padding-li"><%= link_to "Monthly", photographer_events_info_path(calendar_type: "month"), class: 'month-sel link-padding-zero', remote: true %></li>
    <li><%= link_to "Weekly", photographer_events_info_path(calendar_type: "week"), class: 'week-sel link-padding-zero', remote: true %></li>
  </ul>
</div>
<div>
	<div class="calender_and_info">
		<%= render partial: "calender_and_info", calendar_event: @calendar_event %>
	</div>
</div>
		<div id="abc2">
		<!-- Popup Div Starts Here -->
			<div id="popupContact" class="form-calandar-popup-loc">
				<%= image_tag ("close1.png"), class: "close cal-close", data: { id: "abc2" }%>
	<!-- Contact Us Form -->
				<%= form_for Event.new, url: create_calender_event_path, validate: true, html: { id: "add-calender-event-model", class: "form-action form-calandar-popup" } do |f| %>
					
					<center><h2 class="form-calandar-popup-heading-top">Add a Event</h2></center>
					<fieldset class="form-calandar-popup-fieldset">
					  <%= f.select(:category_id , options_from_collection_for_select(Category.all, "id", "name"), { prompt: "Event Type"  }, class: "form-title form-control event-category", :id => "event-category" , style: "height: 50px;margin-top: 1px;border-radius: 0px;width: 80%;")   %>
					  <%= f.text_field :name, autofocus: true, :placeholder =>"Name", :class => "first-field client_fields client_fields_calandar" %>
					  <%= f.text_field :location, autofocus: true, :placeholder =>"Location", :class => "first-field client_fields client_fields_calandar" %>
					  <%= f.text_field :bridal, autofocus: true, :placeholder =>"Bride Name", :class => "bride_name first-field client_fields client_fields_calandar", style: "display: none;" %>
					  <%= f.text_field :groom, autofocus: true, :placeholder =>"Groom Name", :class => "groom_name first-field client_fields client_fields_calandar", style: "display: none;" %>
					  <%= f.select(:client_id , options_from_collection_for_select(current_photographer.clients, "id", "firstname"), { prompt: "Select client"  }, class: "form-title form-control", :id => "form-title" , style: "height: 50px;margin-top: 1px;border-radius: 0px;width: 80%; float: left;")   %>
					  <div class='input-group date' id='datetimepicker1'>
					  	<span class="input-group-addon">
	                		<i class="fa fa-calendar calender-icon" aria-hidden="true"></i>
	              		  </span>
              			<%= f.datetime_field :start_time, autofocus: true, :placeholder =>"Select Date", :class => "first-field client_fields sel-cal-field calendarfield-width" %>
            		  </div>
            <script type="text/javascript">
		            $(function () {
		                $('#datetimepicker1').datetimepicker();
		            });
		        </script>
					 </fieldset>
					<div class="form-calandar-popup-fieldset"><button type="submit" class="button button4 event-submit-on-calendar border-solid-form btn-cal-width-adj"><i class="fa fa-plus-circle btn-sign-up-registration"></i>Add Event</button></div>
				<% end %>
			</div>
	<!-- Popup Div Ends Here -->
		</div>