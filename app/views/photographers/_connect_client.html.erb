<div class="tab-pane fade active in" id="connect">
  <div class="col-md-5 "> 
    <div class="col-md-12 editprofileheading">
      <p class="edit-prfile-para">Search Client to Connect With</p>
    </div>
    <div class="col-md-12 background-main-edit-profile background-security-password">
      <fieldset>
        <div id="connect-message"></div>
        <div style="margin-top:15px;margin-bottom:15px;">
          <%= select_tag "Clients", options_from_collection_for_select(clients, :id, :firstname), id: "select2-client-id", class: "first-field name-field zero-border full-width-show" %> 
        </div>
        <div class="">
          <%= link_to "Connect Client", "#", class: "button button4", id: "connect-client-id" %>
        </div>
      </fieldset>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {
    $('#select2-client-id').select2({
       formatNoMatches: function() {
        return 'No Match Found!';
      }
    });
  });
</script>