<%= image_tag("logo.png", style: "height: 70%;width: 130px;margin-top: 90px;") %>
<div class="background-image">
  <div class="top-content">
    <div >
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 text">
          </div>
        </div>
        <div class="row">
            <div class="col-md-4">
            </div>
          <div class="col-md-4 form-box">
            <div class="form-top">
              <div class="form-top-left">
              </div>
              <div class="form-top-right">
                <i class="fa fa-lock"></i>
              </div>
            </div>
            <div class="form-bottom">
              <%= form_for(current_photographer, url: add_achievements_photographer_path, method: :post, html: { class: 'form-horizantal'}) do |f| %>
                <%= f.fields_for :achievements do |ff| %>
                <div class="form-group">
                  <%= ff.label :title, :class => 'sr-only', :for => 'form-name'%>
                  <%= ff.text_field :title, autofocus: true, :placeholder =>"Title", :class => "form-title form-control", :id => "form-name" %> 
                </div>
                <div class="form-group">
                  <%= ff.label :description, :class => 'sr-only', :for => 'form-name'%>
                  <%= ff.text_field :description, :placeholder =>"Description", :class => "form-description form-control", :id => "form-name" %>
                
                </div>
                <%end%> 
              <%= f.button 'Submit' , class: "btn" ,style:"background: #7b868a;"%>
              <% end %>
            </div>
        </div>  
            <div class="col-md-4">
            </div>
      </div>
    </div>
  </div>
</div>
</div>